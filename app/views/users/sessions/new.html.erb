<%= render 'layouts/loader' %>

<div class="mn-content valign-wrapper signin-page">
    <main class="mn-inner container">
        <div class="valign">
              <div class="row">
                  <div class="col s12 m6 l4 offset-l4 offset-m3">
                      <div class="card white darken-1">
                          <div class="card-content ">
                              <span class="card-title">Sign In</span>
                               <div class="row">
                                   <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
            									  	<div class="input-field col s12">
            									    	<%= f.input :email, required: false, id: "email" %>
            										  </div>

            										<div class="input-field col s12">
            									    	<%= f.input :password, required: false, id: "email" %>
            									    </div>
            									  <div class="col s12 right-align m-t-sm">
            									    <%= f.button :submit, "Sign In", class: "waves-effect waves-light btn teal" %>
            									    <br>
            									    <%= render "users/shared/links" %>
            									  </div>
            									<% end %>
                              </div>
                          </div>
                      </div>
                  </div>
            </div>
        </div>
    </main>
</div>

