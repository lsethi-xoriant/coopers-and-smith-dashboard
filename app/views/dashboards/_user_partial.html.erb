<script>
    Smooch.init({ 
        appToken: 'baneldq1bdmnk7rb17c5p9vrk',
        userId: "<%= current_user.id %>",
        embedded: true,
        emailCaptureEnabled: true
    })
	  .then(function() {
	    Smooch.updateUser({
	      givenName: "<%= current_user.company_name %>",
	      email: "<%= current_user.email %>",
	      signedUpAt: "<%= current_user.created_at"
	    })   
	  });

    Smooch.render(document.getElementById('chat-container'));
</script> 